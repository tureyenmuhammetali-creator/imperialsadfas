<style>
    /* About Page - Premium Design */
    .about-hero-section {
        padding: 160px 0 80px;
        background: linear-gradient(135deg, #0a1628 0%, #1e3a5f 50%, #0f2440 100%);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .about-hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(ellipse at 30% 50%, rgba(184, 134, 11, 0.08) 0%, transparent 60%),
                    radial-gradient(ellipse at 70% 30%, rgba(30, 58, 95, 0.3) 0%, transparent 50%);
        pointer-events: none;
    }

    .about-hero-section .container {
        position: relative;
        z-index: 1;
    }

    .about-hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(184, 134, 11, 0.15);
        border: 1px solid rgba(184, 134, 11, 0.3);
        padding: 8px 20px;
        border-radius: 50px;
        color: #d4a84b;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 0.05em;
        text-transform: uppercase;
