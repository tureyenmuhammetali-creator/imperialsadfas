@model Vehicle
@{
    ViewData["Title"] = "Yeni Araç Ekle";
    Layout = "_AdminLayout";
}

<div class="admin-form-page">
    <div class="form-header">
        <a asp-action="Vehicles" class="btn btn-outline">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

    <div class="admin-card">
        <div class="card-body">
            <form asp-controller="Admin" asp-action="CreateVehicle" method="post" class="admin-form" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Name">Araç Adı *</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Mercedes-Benz S-Class" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PassengerCapacity">Yolcu Kapasitesi</label>
                        <input asp-for="PassengerCapacity" type="number" class="form-control" min="1" max="20" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Araç hakkında kısa açıklama..."></textarea>
                </div>

                <div class="form-group">
                    <label asp-for="Features">Özellikler</label>
                    <input asp-for="Features" class="form-control" placeholder="Deri Koltuk,Klima,WiFi,USB Şarj (virgülle ayırın)" />
                    <small class="form-hint">Özellikleri virgülle ayırarak yazın</small>
                </div>

                <div class="form-group">
                    <label for="mainImageFile">Ana Görsel</label>
                    <input type="file" name="mainImageFile" id="mainImageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
                </div>
                <div class="form-group">
                    <label for="albumFiles">Albüm Görselleri</label>
                    <input type="file" name="albumFiles" id="albumFiles" class="form-control" accept=".jpg,.jpeg,.png,.webp" multiple />
                    <small class="form-hint">Birden fazla görsel seçebilirsiniz</small>
                </div>

                <p class="form-hint text-muted mb-3">Her para birimi için aracın kullanım ücretini girin. Sitede seçilen paraya göre ilgili ücret gösterilir.</p>
                <div class="form-group" style="border: 1px solid #30363d; border-radius: 8px; padding: 16px; margin-bottom: 16px; background: #161b22;">
                    <label class="d-block mb-2" style="color: #58a6ff; font-weight: 600;">€ Euro (EUR)</label>
                    <div class="form-group">
                        <label asp-for="MinimumPrice">Aracın kullanım ücreti</label>
                        <input asp-for="MinimumPrice" type="number" step="0.01" class="form-control" />
                    </div>
                </div>
                <div class="form-group" style="border: 1px solid #30363d; border-radius: 8px; padding: 16px; margin-bottom: 16px; background: #161b22;">
                    <label class="d-block mb-2" style="color: #58a6ff; font-weight: 600;">$ Amerikan Doları (USD)</label>
                    <div class="form-group">
                        <label asp-for="MinimumPriceUsd">Aracın kullanım ücreti</label>
                        <input asp-for="MinimumPriceUsd" type="number" step="0.01" class="form-control" />
                    </div>
                </div>
                <div class="form-group" style="border: 1px solid #30363d; border-radius: 8px; padding: 16px; margin-bottom: 16px; background: #161b22;">
                    <label class="d-block mb-2" style="color: #58a6ff; font-weight: 600;">₺ Türk Lirası (TRY)</label>
                    <div class="form-group">
                        <label asp-for="MinimumPriceTry">Aracın kullanım ücreti</label>
                        <input asp-for="MinimumPriceTry" type="number" step="0.01" class="form-control" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Currency">Varsayılan gösterim para birimi</label>
                        <select asp-for="Currency" class="form-control" style="max-width: 220px;">
                            <option value="EUR" selected>€ EUR (Euro)</option>
                            <option value="USD">$ USD (Dolar)</option>
                            <option value="TRY">₺ TRY (Türk Lirası)</option>
                            <option value="GBP">£ GBP (Sterlin)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SortOrder">Sıralama</label>
                        <input asp-for="SortOrder" type="number" class="form-control" />
                    </div>
                </div>

                <div class="form-group form-check">
                    <input type="hidden" name="IsActive" value="0" />
                    <input type="checkbox" name="IsActive" value="1" class="form-check-input" id="IsActive" checked />
                    <label for="IsActive" class="form-check-label">Aktif</label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check"></i> Kaydet
                    </button>
                    <a asp-action="Vehicles" class="btn btn-outline">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
