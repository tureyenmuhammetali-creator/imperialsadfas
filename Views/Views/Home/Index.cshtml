@model HomeViewModel
@{
    ViewData["Title"] = "VIP Transfer Hizmetleri";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="position: fixed; top: 100px; left: 50%; transform: translateX(-50%); z-index: 9999; max-width: 500px;">
        <i class="bi bi-check-circle-fill"></i>
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="position: fixed; top: 100px; left: 50%; transform: translateX(-50%); z-index: 9999; max-width: 500px;">
        <i class="bi bi-exclamation-circle-fill"></i>
        @TempData["Error"]
    </div>
}

<!-- Hero Section -->
<section class="hero">
    <!-- Slider -->
    <div class="hero-slider" id="heroSlider">
        @if (Model.HeroSlides.Any())
        {
            var slideIndex = 0;
            foreach (var slide in Model.HeroSlides)
            {
                <div class="hero-slide @(slideIndex == 0 ? "active" : "")" data-index="@slideIndex" @(slideIndex > 0 ? "style='display:none;'" : "")>
                    @if (slideIndex == 0)
                    {
                        <img src="@slide.ImageUrl" 
                             alt="Imperial VIP Transfer" 
                             class="hero-slide-image" 
                             fetchpriority="high"
                             onerror="this.style.display='none'" />
                    }
                    else
                    {
                        <img data-src="@slide.ImageUrl" 
                             alt="Imperial VIP Transfer" 
                             class="hero-slide-image lazy-slide" 
                             onerror="this.style.display='none'" />
                    }
                    <div class="hero-slide-overlay"></div>
                </div>
                slideIndex++;
            }
        }
        else
        {
            <div class="hero-slide active">
                <div class="hero-slide-overlay"></div>
            </div>
        }
    </div>
    
    @if (Model.HeroSlides.Count() > 1)
    {
        <button class="hero-nav hero-nav-prev" id="heroPrev" aria-label="Önceki">
            <i class="bi bi-chevron-left"></i>
        </button>
        <button class="hero-nav hero-nav-next" id="heroNext" aria-label="Sonraki">
            <i class="bi bi-chevron-right"></i>
        </button>
        
        <div class="hero-dots" id="heroDots">
            @for (int i = 0; i < Model.HeroSlides.Count(); i++)
            {
                <button class="hero-dot @(i == 0 ? "active" : "")" data-index="@i" aria-label="Slide @(i + 1)"></button>
            }
        </div>
        
        <div class="hero-slide-counter">
            <span class="current" id="slideCurrentNum">01</span>
            <span class="separator">/</span>
            <span class="total">@Model.HeroSlides.Count().ToString("D2")</span>
        </div>
    }
    
    <div class="hero-content container">
        <div class="hero-text">
            <span class="hero-badge">
                <i class="bi bi-star-fill"></i>
                @(Model.Settings.GetValueOrDefault("hero_badge", "Premium VIP Transfer Hizmetleri"))
            </span>
            <h1 class="hero-title">
                @(Model.Settings.GetValueOrDefault("hero_title", "Lüks ve Konforlu"))<br/>
                <span>@(Model.Settings.GetValueOrDefault("hero_subtitle", "Transfer Hizmetleri"))</span>
            </h1>
            <p class="hero-description">
                @(Model.Settings.GetValueOrDefault("hero_description", "Havalimanı, otel ve şehirler arası VIP transfer hizmetleri. Üst segment araçlar, profesyonel şoförler ve kesintisiz iletişim."))
            </p>
            <div class="hero-buttons">
                <a asp-controller="Reservation" asp-action="Index" class="btn btn-accent btn-lg">
                    <i class="bi bi-calendar-check"></i>
                    Rezervasyon Yap
                </a>
                <a asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-car-front"></i>
                    Araç Filomuz
                </a>
            </div>
            
            <!-- Hero Stats -->
            <div class="hero-stats">
                <div class="hero-stat">
                    <span class="hero-stat-number">10+</span>
                    <span class="hero-stat-label">Yıllık Deneyim</span>
                </div>
                <div class="hero-stat">
                    <span class="hero-stat-number">5000+</span>
                    <span class="hero-stat-label">Mutlu Müşteri</span>
                </div>
                <div class="hero-stat">
                    <span class="hero-stat-number">15+</span>
                    <span class="hero-stat-label">VIP Araç</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Reservation Section - Airport ↔ Region only (same as main Home/Index) -->
@{
    var allRegionsFormV = Model.AllRegionsForForm ?? Model.Regions;
    const string airportValueV = "Antalya Havalimanı";
}
<section class="quick-reservation-section" style="content-visibility: auto;">
    <div class="container">
        <div class="quick-reservation-header">
            <h2>Imperial VIP Transfer</h2>
            <p>Sorunsuz bir yolculuk için ideal rezervasyonunuzu erkenden yapın; konfor ve kolaylığı güvence altına alın!</p>
        </div>
        
        <form asp-controller="Reservation" asp-action="Index" method="get" class="quick-reservation-form" id="quickReservationForm">
            <input type="hidden" name="regionId" id="quickFormRegionId" value="" />
            <div class="quick-form-grid">
                <div class="form-group">
                    <label>Alınacak Nokta</label>
                    <select name="pickupLocation" id="pickupLocation" class="form-control" required>
                        <option value="">Bölge veya havalimanı seçin</option>
                        <option value="@airportValueV">@airportValueV</option>
                        @foreach (var region in allRegionsFormV)
                        {
                            <option value="@region.Name" data-region-id="@region.Id">@region.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Bırakılacak Nokta</label>
                    <select name="dropoffLocation" id="dropoffLocation" class="form-control" required>
                        <option value="">Önce alınacak noktayı seçin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Yolcu Sayısı</label>
                    <input type="number" name="passengers" class="form-control" placeholder="Yolcu: 1" min="1" max="20" value="1" />
                </div>
                <div class="form-group form-submit">
                    <button type="submit" class="btn btn-accent btn-lg">
                        Rezervasyon Formuna Git
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>

