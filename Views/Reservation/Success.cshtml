    };
    var txt = t.ContainsKey(currentLang) ? t[currentLang] : t["tr"];
    ViewData["Title"] = txt["Title"];
}

<!-- Success Section -->
<section class="success-page section">
    <div class="container">
        <div class="success-content">
            <div class="success-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            
            <h1>@txt["Received"]</h1>
            <p class="success-message">
                @txt["ThankYou"]
            </p>

            <div class="reservation-summary">
                <h3>@txt["Summary"]</h3>
                
                <div class="summary-grid">
                    <div class="summary-item">
                        <span class="summary-label">@txt["ResNo"]</span>
                        <span class="summary-value">#@Model.Id</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-label">@txt["FullName"]</span>
                        <span class="summary-value">@Model.CustomerName</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-label">@txt["Phone"]</span>
                        <span class="summary-value">@Model.CustomerPhone</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-label">@txt["TransferDate"]</span>
                        <span class="summary-value">@(Model.TransferDate?.ToString("dd.MM.yyyy") ?? "-") - @Model.TransferTime</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-label">@txt["Pickup"]</span>
                        <span class="summary-value">@Model.PickupLocation</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-label">@txt["Dropoff"]</span>
                        <span class="summary-value">@Model.DropoffLocation</span>
                    </div>
                    @if (Model.Vehicle != null)
                    {
                        <div class="summary-item">
                            <span class="summary-label">@txt["Vehicle"]</span>
                            <span class="summary-value">@Model.Vehicle.Name</span>
                        </div>
                    }
                    <div class="summary-item">
                        <span class="summary-label">@txt["PassengerCount"]</span>
                        <span class="summary-value">@(Model.PassengerCount ?? 0)</span>
                    </div>
                    @if ((Model.DistanceKm ?? 0) > 0)
                    {
                        <div class="summary-item">
                            <span class="summary-label">@txt["Distance"]</span>
                            <span class="summary-value">@(Model.DistanceKm?.ToString("N0")) KM</span>
                        </div>
                    }
                </div>
            </div>

            <div class="success-info">
                <p><i class="bi bi-info-circle"></i> @txt["Info"]</p>
            </div>

            <div class="success-actions">
                <a asp-controller="Home" asp-action="Index" asp-route-lang="@currentLang" class="btn btn-primary">
                    <i class="bi bi-house"></i>
                    @txt["Home"]
                </a>
                <a href="https://wa.me/905303471580" class="btn btn-whatsapp" target="_blank">
                    <i class="bi bi-whatsapp"></i>
                    @txt["WhatsApp"]
                </a>
            </div>
        </div>
    </div>
</section>
